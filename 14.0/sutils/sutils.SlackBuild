# ---------------------------------------------------------------------
# BE AWARE when you build the git version. Changes upstream may break
# this SlackBuild.
# ---------------------------------------------------------------------

PRGNAM=sutils
# Setting version to 'git' downloads and builds the latest git version
VERSION=${VERSION:-0.1}
BUILD=${BUILD:-1}
TAG=${TAG:-_tb}
CWD=$(cd $(dirname $0); pwd)

# You may want to change these
TMP=${TMP:-/tmp/tb}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/home/tbck/builds/pkgs}

GITURL=https://github.com/baskerville/sutils.git
#  URL=https://github.com/baskerville/sutils/archive/0.1.tar.gz

# Default /bin prefix is /usr/local.. we want /usr
PREFIX=/usr

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

set -e # Exit on most errors

# Start build
rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
if [ "$VERSION" == "git" ] ; then
    # If git
    DATE=$(date +%Y%m%d)
    git clone $GITURL $PRGNAM-$VERSION
else
    # If release
    tar xvf $CWD/$PRGNAM-$VERSION.tar.gz
fi
cd $PRGNAM-$VERSION
chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

# Compile the application and install it into the $PKG directory
make
make install DESTDIR=$PKG PREFIX=$PREFIX
make clean

# Include docs, SlackBuild script and license in the documentation directory
mkdir -p $PKG/usr/doc/$PRGNAM
cp $TMP/$PRGNAM-$VERSION/README.md $PKG/usr/doc/$PRGNAM
cp $TMP/$PRGNAM-$VERSION/LICENSE $PKG/usr/doc/$PRGNAM
cat $CWD/$(basename $0) > $PKG/usr/doc/$PRGNAM/$PRGNAM.SlackBuild
chown -R root:root $PKG/usr/doc/$PRGNAM
find $PKG/usr/doc -type f -exec chmod 644 {} \;

# Copy the description into /install
mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

# Make the package; leave it in $OUTPUT
VERSION=${DATE:-$VERSION}
cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
